body
  width 1000px
  max-width 100%
  margin auto

  &.drag::before
    content ''
    position fixed
    top 0
    left 0
    bottom 0
    right 0
    background rgba(248,40,59,0.3)
    border 5px #f8283b dashed
    z-index 999

#map
  width 100%
  height 300px

#map_context-menu-no-action
  text-decoration none
  color inherit
  cursor default

header
  h2
    float left
    width 50%
  aside
    float left
    width 50%

header + *
  clear both

#searchaddress
  margin 7px auto
  width 400px
  max-width 100%

#seeding, #downloading
  min-height 20px

#nearby
  min-height 240px

ul
  padding-left 26px
  list-style square

table
  width 100%
  table
    margin 0
    border none
