{
  "name": "localfiles",
  "version": "0.0.0",
  "scripts": {
    "watch-scss": "ls *.scss | entr fish -c 'node-sass --output-style compressed --source-map true style.scss > bundle.css; and echo 'done!''",
    "build-scss": "node-sass --output-style compressed --source-map true style.scss > bundle.css",
    "watch-js": "find -name \"*.js\" ! -name \"bundle.js\" ! -path \"*node_modules*\" | entr browserifyinc -vd app.js -o bundle.js",
    "build-js": "browserify app.js -p tinyify -o bundle.js"
  },
  "browserify": {
    "transforms": [
      "bubleify"
    ]
  },
  "license": "ISC",
  "dependencies": {
    "buffer": "^5.0.8",
    "cuid": "^1.3.8",
    "dropzone": "^5.2.0",
    "firebase": "^4.8.1",
    "geofire": "^4.1.2",
    "ipfs": "^0.27.5",
    "ipfs-dropzone": "^1.0.1",
    "places.js": "^1.4.18",
    "render-media": "^2.10.0",
    "simple-encryptor": "^1.1.1",
    "throttleit": "^1.0.0"
  },
  "devDependencies": {
    "browserify": "^14.5.0",
    "browserify-incremental": "^3.1.1",
    "bubleify": "^1.1.0",
    "bulma": "^0.6.1",
    "tinyify": "^2.4.0"
  },
  "private": true
}
